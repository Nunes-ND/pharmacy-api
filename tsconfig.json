{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"target": "es2024",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"lib": ["es2024"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"incremental": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*", "tests/**/*", "drizzle.config.ts"],
	"exclude": ["node_modules", "dist"]
}
