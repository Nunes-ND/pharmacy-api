{
	"name": "pharmacy-api",
	"version": "1.0.0",
	"description": "API with Fastify and Drizzle ORM for a pharmacy management system.",
	"main": "dist/main.js",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"start": "node dist/main.js",
		"start:dev": "npm run db:up && npm run db:push && npm run dev",
		"dev": "tsx watch --env-file .env src/main.ts",
		"build": "tsc -p tsconfig.prod.json",
		"db:up": "docker compose up -d --wait postgresql",
		"db:down": "docker compose down postgresql",
		"db:start": "docker compose start postgresql",
		"db:stop": "docker compose stop postgresql",
		"lint": "biome lint --write",
		"format": "biome format --write",
		"check": "biome check --write --unsafe",
		"test": "vitest run",
		"test:unit": "vitest run unit",
		"test:integration": "vitest run integration",
		"test:watch": "vitest --watch",
		"db:push": "drizzle-kit push --config ./drizzle.config.ts",
		"db:generate": "drizzle-kit generate --config ./drizzle.config.ts",
		"db:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
		"prepare": "husky"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Nunes-ND/pharmacy-api.git"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "commonjs",
	"bugs": {
		"url": "https://github.com/Nunes-ND/pharmacy-api/issues"
	},
	"homepage": "https://github.com/Nunes-ND/pharmacy-api#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"@fastify/swagger": "^9.5.1",
		"@fastify/swagger-ui": "^5.2.3",
		"@types/node": "^24.2.0",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.4",
		"husky": "^9.1.7",
		"pino-pretty": "^13.1.1",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"drizzle-orm": "^0.44.4",
		"fastify": "^5.4.0",
		"fastify-plugin": "^5.0.1",
		"fastify-type-provider-zod": "^5.0.2",
		"pg": "^8.16.3",
		"zod": "^4.0.14"
	}
}
